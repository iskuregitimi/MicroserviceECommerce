@model IEnumerable<MicroserviceECommerce.MVCUI.Models.ItemonCartModel>
@using MicroserviceECommerce.MVCUI.Models;
@{
    ViewBag.Title = "CartView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr>
        <th>ProductID</th>
        <th>Product Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
        <th>Remove</th>
    </tr>

    @foreach (var item in (List<ItemonCartModel>)Session["Cart"])
    {
        <tr>
            <td>@item.Product.ProductID</td>
            <td>@item.Product.ProductID</td>
            <td>@item.Product.CategoryID.ToString()</td>
            <td>@item.Product.UnitPrice</td>
            <td>@item.Quantity</td>
            <td>@(item.Product.UnitPrice * item.Quantity)</td>
            <td>
                <a class="btn btn-warning btn-sm" href="~/ShopCart/DeleteShopCart/@item.Product.ProductID">Remove</a>
            </td>
        </tr>
    }
<tr>
    <td align="right" colspan="6">Sum</td>
    <td>
        @{
            List<ItemonCartModel> cart = (List<ItemonCartModel>)Session["cart"];
            var Total = cart.Sum(x => x.Product.UnitPrice * x.Quantity);
        }
        @Total
    </td>
    <td align="right" colspan="6"><a class="btn btn-warning btn-sm" href="~/Orders/PutOrders/">Buy</a></td>
</tr>
</table>
